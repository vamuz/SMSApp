                    @Html.DisplayNameFor(model => model.Occupation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Location)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmailAddress)
                </th>
                
            </tr>
        </thead>

    </table>
</div>

@section Scripts{
    <script src="~/assets/vendors/custom/datatables/datatables.bundle.js" type="text/javascript"></script>
    <script src="~/assets/demo/default/custom/crud/datatables/extensions/buttons.js" type="text/javascript"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js" type="text/javascript"></script>
    <link href="http://cdn.rawgit.com/davidstutz/bootstrap-multiselect/master/dist/css/bootstrap-multiselect.css" rel="stylesheet" type="text/css" />
    <script src="http://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="http://cdn.rawgit.com/davidstutz/bootstrap-multiselect/master/dist/js/bootstrap-multiselect.js" type="text/javascript"></script>


    <script type="text/javascript">
        $(document).ready(function () {
            var j = jQuery.noConflict();
            j(function () {
                j('#CountyId').multiselect({ includeSelectAllOption: true });
                j("#CountyId").multiselect('selectAll', false);
                j("#CountyId").multiselect('updateButtonText');

                j('#ConstituencyId').multiselect({ includeSelectAllOption: true });
                j("#ConstituencyId").multiselect('selectAll', false);
                j("#ConstituencyId").multiselect('updateButtonText');

                j('#MaritalStatusId').multiselect({ includeSelectAllOption: true });
                j("#MaritalStatusId").multiselect('selectAll', false);
                j("#MaritalStatusId").multiselect('updateButtonText');

                j('#GenderId').multiselect({ includeSelectAllOption: true });
                j("#GenderId").multiselect('selectAll', false);
                j("#GenderId").multiselect('updateButtonText');

                j('#PWDCategoryId').multiselect({ includeSelectAllOption: true });
                j("#PWDCategoryId").multiselect('selectAll', false);
                j("#PWDCategoryId").multiselect('updateButtonText');

            });
            $("#GetDataTable").DataTable({
                responsive: !0,
                colReorder: !0,
                "order": [[0, "dsc"]],
                dom: 'Bfrtip',
                buttons: ['pdf', 'csv', 'print', 'excel'],
                ajax: {
                    url: '/SMSAppRegistrations/FetchData',
                    type: "POST",
                    dataType: "JSON",
                    "dataSrc": "",
                    data: function (d) {
                        d.county = JSON.stringify($("#CountyId").val());
                        d.maritalstatus = JSON.stringify($("#MaritalStatusId").val());
                        d.gender = JSON.stringify($("#GenderId").val());
                        d.constituency = JSON.stringify($("#ConstituencyId").val());
                        d.PWDCategory = JSON.stringify($("#PWDCategoryId").val());
                    }
                },
                columns: [
                    { data: "fullnames" },
                    { data: "nationalidno" },
                    { data: "yearofbirth" },
                    { data: "gendertype" },
                    { data: "maritalstatustype" },
                    { data: "phoneno" },
                    { data: "constituencyname" },
                    { data: "countyname" },
                    { data: "pwdcategorytype" },
                    { data: "occupation" },
                    { data: "location" },
                    { data: "emailaddress" },
               
                ]
            });
        });
       

        $("#LoadData").on("click",
            function () {
                var county = JSON.stringify($("#CountyId").val().length);
                var constituency = JSON.stringify($("#ConstituencyId").val().length);
                var gender = JSON.stringify($("#GenderId").val().length);
                var maritalstatus = JSON.stringify($("#MaritalStatusId").val().length);
                var pwd = JSON.stringify($("#PWDCategoryId").val().length);

                if (pwd === "0" || county === "0" || gender === "0" || maritalstatus === "0" || constituency === "0") {
                    swal("Error!", "All the filter parameters are required", "error");
                    return;
                }
                $.ajax({
                    url: '/SMSAppRegistrations/FetchData',
                    type: "GET",
                    dataType: "JSON",
                    contentType: "application/json",
                    data: {
                        county: JSON.stringify($("#CountyId").val()),
                        maritalstatus: JSON.stringify($("#MaritalStatusId").val()),
                        gender: JSON.stringify($("#GenderId").val()),
                        constituency: JSON.stringify($("#ConstituencyId").val()),
                        PWDCategory: JSON.stringify($("#PWDCategoryId").val())
                    },
                    success: function (data) {
                        $('#GetDataTable').DataTable().ajax.reload();
                    }
                });
                
            });

        


    </script>
}